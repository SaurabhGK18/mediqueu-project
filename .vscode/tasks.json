{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "stop-server",
            "type": "shell",
            "command": "./stop-server.sh",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp",
                "lib/*",
                "-d",
                "out",
                "src/main/java/**/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "lib/*:out",
                "Main"
            ],
            "group": "test",
            "dependsOn": "compile",
            "problemMatcher": []
        }
    ]
}
